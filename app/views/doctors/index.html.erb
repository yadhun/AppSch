<div class="container">
  <p id="notice"><%= notice %></p>
  <h1>Listing Doctors</h1>
  <div class="well">
    <table>
      <thead>
      <tr>
        <th>Name</th>
        <th>Available on</th>
        <th>Department</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @doctors.each do |doctor| %>
          <tr>
            <td><%= doctor.name %></td>
            <td><%= doctor.available_on %></td>
            <td><%= doctor.department %></td>
            <td><%= link_to 'Show', doctor %></td>
            <td><%= link_to 'Edit', edit_doctor_path(doctor) %></td>
            <td><%= link_to 'Destroy', doctor, method: :delete, data: { confirm: 'Are you sure?' }, %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <br>
  <%= link_to 'New Doctor', new_doctor_path,:class => "btn btn-default btn-lg" %>
</div>

