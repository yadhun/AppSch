
  <div class="container">
    <div class="well">
    <%= simple_form_for(@appointment, html: { class: 'form-horizontal' }) do |f| %>
        <% if @appointment.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@appointment.errors.count, "error") %> prohibited this appointment from being saved:</h2>

              <ul>
                <% @appointment.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
              </ul>
            </div>
        <% end %>
        <div class="field">
          <%= f.hidden_field :department_id , :value=> @department.id%>
        </div>

        <table class="table table-striped">
          <thead>
          <tr>
            <th>Doctor_id</th>
            <th>Name</th>
            <th>Available on</th>

          </tr>
          </thead>
          <tbody>
          <% @doctors.each do |doctor| %>
              <tr>
                <% if doctor.department_id == @department.id %>
                    <td><%= doctor.id %></td>
                    <td><%= doctor.name %></td>
                    <td><%= doctor.available_on %></td>
                <% end %>
              </tr>
          <% end %>

          </tbody>
        </table>
</br>


        <div class="form-inline">
          <%= f.input :doctor_id %></br></br></br>

        </div>
        <div class="form-inline">
          <%= f.input :date_of_appointment %>
        </div >
          <div class = "form">
            <%= f.input :schedule_later %>
          </div>

        </div>
        <div class="text-center">
       
            <%= f.button :submit, :class => 'btn-primary btn-lg' %>
               </div>

    <% end %>
</div>

