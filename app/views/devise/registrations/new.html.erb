<div class="container">
  <div class="text-center">
    <h1>sign up</h1>
  </div>

  <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="well">
    <div class="form">

      <div class="row">
        <div class="col-md-6">
          <%=f.text_field :firstname ,required: true %>

        </div>
        <div class="col-md-6">
          <%=f.text_field :lastname ,required: true %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-6">
          <%= f.select :sex, sex: [:Male, :Female] %>

        </div>
        </div>
      <div class="row">
        <div class="form-inline">
          <div class="col-md-6">
           </br> <%= f.date_select :date_of_birth, start_year: 1900 %></br></br>
            </div>
        </div>
        <div class="col-md-6">
          <div class="form-inline">
          <%= f.select :blood_group, bloodgroup: ["Unknown", "O+", "O-", "A+", "A-", "B+", "B-", "AB+", "AB-"] %>
        </div>
        </div>

      </div>

      <div class="row">
          <div class="col-md-6">
            </br> <%= f.text_area :address,required: true %></br></br>
          </div>
        </div>

      <div class="row">
        <div class="col-md-6">

          <%=f.text_field :occupation ,required: true %>

        </div>

      </div>

      <div class="row">
        <div class="col-md-6">
          <%=f.text_field :phone_no ,required: true %>

        </div>
        </div>

      <div class="row">
        <div class="col-md-6">

          <%= f.text_field :email, required: true, autofocus: true %>

        </div>
        </div>

      <div class="row">
        <div class="col-md-6">
          <%= f.text_field :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>

        </div>
        <div class="col-md-6">
          <%= f.text_field :password_confirmation, required: true %>
        </div>
      </div>



    </div>
    <div class="text-center">
      <div class="form-actions">
        <%= f.submit "Sign up", class: "btn btn-lg btn-primary btn-block" %>
      </div>
  <% end %>

    </div>

  </div>
</div>




